<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/other_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Name"
        android:textColor="#989494"
        android:textSize="16sp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_profile_pic"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/other_user_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/group_chat_icon"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />


    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:background="@drawable/edit_text_round_corner"
        android:backgroundTint="@color/orange"
        android:padding="8dp"
        android:layout_toRightOf="@id/chat_profile_pic"
        android:layout_below="@id/other_user_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello how are you"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:background="@drawable/edit_text_round_corner"
        android:backgroundTint="@color/yellow"
        android:padding="8dp">

        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i am fine"
            android:textColorHighlight="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>