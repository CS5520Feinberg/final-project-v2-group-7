<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/bodyTextColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:actionButtonStyle">@color/primaryColor</item>
    </style>

    <style name="HeadingTextStyle">
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>


    <drawable name="customButtonBackground">#FF4081</drawable>
    <drawable name="customSelector">
        <item android:state_pressed="true" android:drawable="@color/accentColor" />
        <item android:drawable="@color/primaryColor" />
    </drawable>

    <style name="CustomButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="CustomCheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/accentColor</item>
    </style>

    <dimen name="marginSmall">8dp</dimen>
    <dimen name="paddingMedium">16dp</dimen>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_color</item>
    </style>

    <style name="MyNumberPickerTheme" parent="android:Theme.Material">
        <item name="android:selectionDividerHeight">2dp</item>
        <item name="android:colorControlNormal">@color/divider_color</item>
    </style>

    <!-- Custom style for the checkbox -->
    <style name="WhiteCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/white</item>
    </style>

    <!-- Custom style for the spinner dropdown items -->
    <style name="WhiteSpinnerDropdownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSpinnerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>




</resources>
